
.container {
	position: relative;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
}
.tabContainer {
	margin-top: 10rpx;
	position: -webkit-sticky;
	position: sticky;
	width: 100%;
	left: 0;
	right: 0;
	top: 0;
	z-index: 1;
}
.list-container {
	position: relative;
	padding: 20rpx 20rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
}
.item {
	position: relative;
	margin-bottom: 30rpx;
	margin-top: 10rpx;
	width: 100%;
	background: #ffffff;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	border-bottom: solid #f5f5f5 1rpx;
}
.img {
	width: 100%;
	height: 350rpx;
	border-radius: 28rpx;
	box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.08);
}
.video-container {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	width: 100%;
	height: 350rpx;
}
.video {
	width: 100%;
	height: 100%;
}
.text-container {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	margin-top: 20rpx;
	padding-left: 20rpx;
	padding-right: 20rpx;
}
.title {
	margin-top: 20rpx;
	font-size: 28rpx;
	color: #333333;
	font-weight: bold;
}
.director {
	margin-top: 10rpx;
	margin-bottom: 25rpx;
	font-size: 24rpx;
	color: #666666;
	font-weight: 400rpx;
	margin-top: 20rpx;
}
.tab-container {
	position: fixed;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	height: 80rpx;
	width: 550rpx;
	padding-left: 100rpx;
	padding-right: 100rpx;
	bottom: 40rpx;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.tab-item {
	height: 80rpx;
	line-height: 80rpx;
	padding: 0 20rpx;
	text-align: center;
	border-radius: 40rpx;
	background-color: #ffffff;
	box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.08);
}
.tab-item-selected {
	font-size: 28rpx;
	color: #333333;
	font-weight: bold;
}
.tab-item-normal {
	font-size: 24rpx;
	color: #666666;
	font-weight: 400rpx;
}

