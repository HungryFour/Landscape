
.container {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	position: relative;
}
.video-container {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	width: 100%;
	height: 420rpx;
	position: fixed;
	top: 0rpx;
	z-index: 10;
	background: #FFFFFF;
}
.video {
	width: 100%;
	height: 400rpx;
}
.info-container {
	position: absolute;
	width: 100%;
	top: 420rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
}
.director-container {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	        justify-content: flex-start;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.director-avatar {
	margin-left: 30rpx;
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
	overflow: hidden;
	border:1rpx solid #007AFF
}
.director-name {
	margin-left: 30rpx;
}
.info {
	padding: 30rpx;
}
.talk {
	position: fixed;
	right: 40rpx;
	bottom: 80rpx;
	height: 60rpx;
	line-height: 60rpx;
	padding: 0 20rpx;
	text-align: center;
	font-size: 24rpx;
	border-radius: 10rpx;
	background-color: #ffffff;
	box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.08);
}


